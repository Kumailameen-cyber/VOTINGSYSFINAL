@model IEnumerable<practice.DTOs.VoteResultDto>
@{
    ViewData["Title"] = "View Results";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var election = ViewBag.Election as practice.Models.Election;
    var totalVotes = (int)ViewBag.TotalVotes;
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-gradient-dark text-white shadow-lg border-0 rounded-4 overflow-hidden">
                <div class="card-body py-5 text-center position-relative">
                    <div class="position-relative z-1">
                        <h2 class="fw-bold mb-2">
                            <i class="fas fa-chart-bar me-2 text-success"></i>Election Results
                        </h2>
                        <h4 class="mb-3 text-white-50">@election?.Title</h4>
                        <p class="mb-4 text-white-50 mx-auto" style="max-width: 600px;">@election?.Description</p>
                        <div class="d-inline-block bg-white bg-opacity-10 rounded-pill px-4 py-2 border border-white border-opacity-25 backdrop-blur">
                            <span class="fs-5 fw-bold">
                                <i class="fas fa-vote-yea me-2"></i>Total Votes: @totalVotes
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row mb-4">
            <div class="col-lg-8 mb-4 mb-lg-0">
                <div class="card shadow-sm border-0 h-100 rounded-4">
                    <div class="card-header bg-white py-3 border-0">
                        <h5 class="mb-0 text-primary fw-bold"><i class="fas fa-chart-bar me-2"></i>Vote Comparison</h5>
                    </div>
                    <div class="card-body">
                        <canvas id="barChart"></canvas>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card shadow-sm border-0 h-100 rounded-4">
                    <div class="card-header bg-white py-3 border-0">
                        <h5 class="mb-0 text-primary fw-bold"><i class="fas fa-chart-pie me-2"></i>Vote Distribution</h5>
                    </div>
                    <div class="card-body d-flex align-items-center justify-content-center">
                        <div style="width: 100%; max-width: 300px;">
                            <canvas id="doughnutChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mb-5">
            <div class="col-12">
                <div class="card shadow-sm border-0 rounded-4 overflow-hidden">
                    <div class="card-header bg-white py-4 border-0">
                        <h4 class="mb-0 fw-bold text-primary">
                            <i class="fas fa-list-ol me-2"></i>Detailed Rankings
                        </h4>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="bg-light text-secondary small text-uppercase">
                                    <tr>
                                        <th class="ps-4 py-3 border-0">Rank</th>
                                        <th class="py-3 border-0">Candidate</th>
                                        <th class="py-3 border-0">Party</th>
                                        <th class="text-center py-3 border-0">Votes</th>
                                        <th class="text-center py-3 border-0">Share</th>
                                        <th class="pe-4 py-3 border-0" style="width: 30%;">Performance</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int rank = 1;
                                        foreach (var result in Model)
                                        {
                                            var rankBadgeClass = rank == 1 ? "bg-warning text-dark" : rank == 2 ? "bg-secondary text-white" : rank == 3 ? "bg-danger text-white" : "bg-light text-muted";
                                            var iconClass = rank == 1 ? "fa-trophy" : rank == 2 ? "fa-medal" : rank == 3 ? "fa-award" : "fa-hashtag";
                                            var rowClass = rank == 1 ? "bg-warning bg-opacity-10" : "";

                                            <tr class="@rowClass">
                                                <td class="ps-4">
                                                    <span class="badge @rankBadgeClass rounded-pill px-3 py-2">
                                                        <i class="fas @iconClass me-1"></i>#@rank
                                                    </span>
                                                </td>
                                                <td>
                                                    <span class="fw-bold text-dark">@result.CandidateName</span>
                                                </td>
                                                <td>
                                                    <span class="text-muted small">@result.PartyName</span>
                                                    @if (!string.IsNullOrEmpty(result.PartySymbol))
                                                    {
                                                        <span class="badge bg-light text-dark border ms-1 rounded-pill">@result.PartySymbol</span>
                                                    }
                                                </td>
                                                <td class="text-center">
                                                    <strong class="fs-5 text-primary">@result.TotalVotes</strong>
                                                </td>
                                                <td class="text-center">
                                                    <span class="fw-bold text-success">@result.VotePercentage.ToString("F1")%</span>
                                                </td>
                                                <td class="pe-4">
                                                    <div class="progress shadow-sm" style="height: 10px; border-radius: 5px;">
                                                        <div class="progress-bar @(rank == 1 ? "bg-success" : "bg-primary")"
                                                             role="progressbar"
                                                             style="width: @result.VotePercentage%"
                                                             aria-valuenow="@result.VotePercentage"
                                                             aria-valuemin="0"
                                                             aria-valuemax="100">
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                                            rank++;
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        var winner = Model.FirstOrDefault();
        if (winner != null)
        {
            <div class="row">
                <div class="col-12">
                    <div class="card shadow-lg border-0 bg-gradient-winner rounded-4 text-white overflow-hidden">
                         <div class="card-body text-center py-5 position-relative">
                             <!-- Confetti effect (simulated) -->
                             <div class="position-absolute top-0 start-0 w-100 h-100 opacity-10" style="background-image: radial-gradient(#fff 2px, transparent 2px); background-size: 30px 30px;"></div>

                            <div class="position-relative z-1">
                                <i class="fas fa-trophy fa-4x text-warning mb-3 filter-shadow"></i>
                                <h5 class="text-white-50 text-uppercase letter-spacing-2 mb-2">Projected Winner</h5>
                                <h1 class="display-3 fw-bold mb-2">@winner.CandidateName</h1>
                                <h4 class="text-white mb-4">@winner.PartyName</h4>
                                
                                <div class="d-inline-flex bg-white text-dark rounded-pill px-5 py-3 shadow-lg align-items-center">
                                    <div class="text-start me-4 border-end pe-4">
                                        <small class="text-muted d-block text-uppercase fw-bold" style="font-size: 0.7rem;">Total Votes</small>
                                        <span class="h3 fw-bold mb-0 text-primary">@winner.TotalVotes</span>
                                    </div>
                                    <div class="text-start">
                                        <small class="text-muted d-block text-uppercase fw-bold" style="font-size: 0.7rem;">Majority</small>
                                        <span class="h3 fw-bold mb-0 text-success">@winner.VotePercentage.ToString("F1")%</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-info shadow-sm rounded-4 border-0 p-4 text-center">
            <div class="mb-2">
                <i class="fas fa-info-circle fa-2x text-info"></i>
            </div>
            <h5 class="alert-heading fw-bold">No Results Available</h5>
            <p class="mb-0 text-muted">No votes have been cast in this election yet.</p>
        </div>
    }

    <div class="text-center mt-5">
        <a asp-action="ManageElections" class="btn btn-outline-secondary rounded-pill px-4">
            <i class="fas fa-arrow-left me-2"></i>Back to Elections
        </a>
    </div>
</div>

<style>
    .bg-gradient-dark {
        background: linear-gradient(135deg, #1e293b 0%, #0f172a 100%);
    }

    .bg-gradient-winner {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    }
    
    .letter-spacing-2 {
        letter-spacing: 2px;
    }
    .filter-shadow {
        filter: drop-shadow(0 4px 6px rgba(0,0,0,0.3));
    }
    .backdrop-blur {
        backdrop-filter: blur(5px);
    }
</style>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

@if (Model != null && Model.Any())
{
    <script>
        // 1. Prepare Data from C# Model using Json.Serialize
        // This converts the IEnumerable<Dto> into JavaScript Arrays safely
        var candidateNames = @Html.Raw(Json.Serialize(Model.Select(x => x.CandidateName)));
        var voteCounts = @Html.Raw(Json.Serialize(Model.Select(x => x.TotalVotes)));
        var partyNames = @Html.Raw(Json.Serialize(Model.Select(x => x.PartyName)));

        // Generate nice colors dynamically conforming to Modern Trust theme (Blues, Greens, Teals)
        var backgroundColors = [
            'rgba(16, 185, 129, 0.7)',  // Emerald
            'rgba(15, 23, 42, 0.7)',    // Navy
            'rgba(59, 130, 246, 0.7)',  // Blue
            'rgba(245, 158, 11, 0.7)',  // Amber
            'rgba(99, 102, 241, 0.7)',  // Indigo
            'rgba(236, 72, 153, 0.7)'   // Pink
        ];

        var borderColors = [
            'rgba(16, 185, 129, 1)',
            'rgba(15, 23, 42, 1)',
            'rgba(59, 130, 246, 1)',
            'rgba(245, 158, 11, 1)',
            'rgba(99, 102, 241, 1)',
            'rgba(236, 72, 153, 1)'
        ];

        // 2. CONFIG: Bar Chart (Main Visualization)
        const ctxBar = document.getElementById('barChart').getContext('2d');
        new Chart(ctxBar, {
            type: 'bar', // The best type for comparing amounts
            data: {
                labels: candidateNames,
                datasets: [{
                    label: 'Votes Received',
                    data: voteCounts,
                    backgroundColor: backgroundColors,
                    borderColor: borderColors,
                    borderWidth: 1,
                    borderRadius: 5
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            stepSize: 1 // Ensure we don't show 1.5 votes
                        },
                        grid: {
                            display: false
                        }
                    },
                    x: {
                        grid: {
                            display: false
                        }
                    }
                },
                plugins: {
                    legend: { display: false } // Hide legend for cleaner look
                }
            }
        });

        // 3. CONFIG: Doughnut Chart (Percentage Visualization)
        const ctxDoughnut = document.getElementById('doughnutChart').getContext('2d');
        new Chart(ctxDoughnut, {
            type: 'doughnut',
            data: {
                labels: candidateNames,
                datasets: [{
                    data: voteCounts,
                    backgroundColor: backgroundColors,
                    hoverOffset: 4,
                    borderWidth: 0
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false, // Allows custom sizing via CSS container
                cutout: '70%',
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: {
                            boxWidth: 12,
                            padding: 20,
                            usePointStyle: true
                        }
                    }
                }
            }
        });
    </script>
}