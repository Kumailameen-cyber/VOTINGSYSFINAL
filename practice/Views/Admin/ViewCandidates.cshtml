@model IEnumerable<practice.Models.Candidate>

@{
    ViewData["Title"] = "View Candidates";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 mb-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Candidates List</h2>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <i class="fas fa-info-circle me-2"></i> No candidates have registered for this election yet.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var candidate in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card shadow-sm border-0 h-100">
                        <div class="card-header bg-white border-bottom-0 pt-4 text-center">

                            <div class="avatar-circle bg-light text-primary mx-auto mb-3 d-flex align-items-center justify-content-center overflow-hidden position-relative"
                                 style="width: 80px; height: 80px; border-radius: 50%; font-size: 2rem;">

                                @if (!string.IsNullOrEmpty(candidate.ProfileImageUrl))
                                {
                                    <img src="@candidate.ProfileImageUrl"
                                         alt="@candidate.User?.FullName"
                                         class="w-100 h-100"
                                         style="object-fit: cover;" />
                                }
                                else
                                {
                                    <i class="fas fa-user-tie"></i>
                                }
                            </div>
                            <h5 class="card-title mb-0">@candidate.User?.FullName</h5>
                            <span class="badge bg-primary rounded-pill mt-2">@candidate.PartyName</span>
                        </div>
                        <div class="card-body">
                            <div class="row mb-2">
                                <div class="col-4 text-muted small">Symbol:</div>
                                <div class="col-8 fw-bold">@candidate.PartySymbol</div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-4 text-muted small">Email:</div>
                                <div class="col-8 text-break">@candidate.User?.Email</div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-4 text-muted small">Bio:</div>
                                <div class="col-8 small text-muted">
                                    @(candidate.Biography?.Length > 50 ? candidate.Biography.Substring(0, 50) + "..." : candidate.Biography)
                                </div>
                            </div>

                            <hr />

                        </div>
                        <div class="card-footer bg-light">
                            <div class="d-flex gap-2">

                                <form asp-action="RemoveCandidate" asp-route-candidateId="@candidate.Id" method="post" class="flex-grow-1">
                                    <button type="submit" class="btn btn-sm btn-outline-danger w-100" onclick="return confirm('Remove this candidate from the election?');">
                                        Remove
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <div class="text-center mt-4">
        <a asp-action="ManageElections" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to Elections
        </a>
    </div>
</div>