@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var totalVoters = (int)ViewBag.TotalVoters;
    var totalCandidates = (int)ViewBag.TotalCandidates;
    var pendingVerifications = (int)ViewBag.PendingVerifications;
    var pendingApprovals = (int)ViewBag.PendingApprovals;
    var activeElections = (int)ViewBag.ActiveElections;
    var totalVotesCast = (int)ViewBag.TotalVotesCast;
}

<div class="container-fluid py-4 min-vh-100">
    <div class="d-flex justify-content-between align-items-center mb-4 animate__animated animate__fadeInDown">
        <div>
            <h2 class="fw-bold text-primary mb-1">
                <i class="fas fa-tachometer-alt me-2"></i>Dashboard
            </h2>
            <p class="text-secondary small mb-0">System Overview & Management</p>
        </div>
        <div class="d-flex gap-2">
            <span class="badge bg-white text-dark shadow-sm px-3 py-2 border rounded-pill">
                <i class="fas fa-calendar me-2 text-primary"></i>@DateTime.Now.ToString("MMM dd, yyyy")
            </span>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row g-4 mb-5 animate__animated animate__fadeInUp">
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm rounded-4 h-100 card-hover overflow-hidden">
                <div class="card-body p-4 position-relative">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-primary bg-opacity-10 p-3 rounded-circle text-primary">
                            <i class="fas fa-users fa-2x"></i>
                        </div>
                        <div class="ms-auto">
                            <i class="fas fa-ellipsis-h text-muted"></i>
                        </div>
                    </div>
                    <h5 class="text-secondary small text-uppercase fw-bold mb-1">Total Voters</h5>
                    <h2 class="fw-bold text-dark mb-0">@totalVoters</h2>
                    <div class="position-absolute bottom-0 end-0 p-3 opacity-10">
                        <i class="fas fa-users fa-4x text-primary"></i>
                    </div>
                </div>
                <div class="card-footer bg-white border-0 py-3">
                    <a asp-action="ManageUsers" class="btn btn-light btn-sm rounded-pill text-primary fw-bold w-100 stretched-link">
                        View Details <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm rounded-4 h-100 card-hover overflow-hidden">
                <div class="card-body p-4 position-relative">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-success bg-opacity-10 p-3 rounded-circle text-success">
                            <i class="fas fa-user-tie fa-2x"></i>
                        </div>
                    </div>
                    <h5 class="text-secondary small text-uppercase fw-bold mb-1">Total Candidates</h5>
                    <h2 class="fw-bold text-dark mb-0">@totalCandidates</h2>
                     <div class="position-absolute bottom-0 end-0 p-3 opacity-10">
                        <i class="fas fa-user-tie fa-4x text-success"></i>
                    </div>
                </div>
                <div class="card-footer bg-white border-0 py-3">
                    <a asp-action="ManageCandidates" class="btn btn-light btn-sm rounded-pill text-success fw-bold w-100 stretched-link">
                        View Details <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm rounded-4 h-100 card-hover overflow-hidden">
                <div class="card-body p-4 position-relative">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-warning bg-opacity-10 p-3 rounded-circle text-warning">
                            <i class="fas fa-user-clock fa-2x"></i>
                        </div>
                    </div>
                    <h5 class="text-secondary small text-uppercase fw-bold mb-1">Pending Voters</h5>
                    <h2 class="fw-bold text-dark mb-0">@pendingVerifications</h2>
                    <div class="position-absolute bottom-0 end-0 p-3 opacity-10">
                        <i class="fas fa-clock fa-4x text-warning"></i>
                    </div>
                </div>
                <div class="card-footer bg-white border-0 py-3">
                    <a asp-action="ManageUsers" class="btn btn-light btn-sm rounded-pill text-warning fw-bold w-100 stretched-link">
                        Verify Now <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm rounded-4 h-100 card-hover overflow-hidden">
                <div class="card-body p-4 position-relative">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-info bg-opacity-10 p-3 rounded-circle text-info">
                            <i class="fas fa-poll fa-2x"></i>
                        </div>
                    </div>
                    <h5 class="text-secondary small text-uppercase fw-bold mb-1">Active Elections</h5>
                    <h2 class="fw-bold text-dark mb-0">@activeElections</h2>
                    <div class="position-absolute bottom-0 end-0 p-3 opacity-10">
                        <i class="fas fa-vote-yea fa-4x text-info"></i>
                    </div>
                </div>
                <div class="card-footer bg-white border-0 py-3">
                    <a asp-action="ManageElections" class="btn btn-light btn-sm rounded-pill text-info fw-bold w-100 stretched-link">
                        Manage <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <h5 class="fw-bold text-primary mb-3">Quick Actions</h5>
    <div class="row g-4">
        <div class="col-md-3">
            <a asp-action="ManageUsers" class="card border-0 shadow-sm rounded-4 card-hover text-center p-4 text-decoration-none h-100">
                <div class="card-body">
                    <i class="fas fa-users fa-3x text-primary mb-3"></i>
                    <h6 class="fw-bold text-dark">Manage Voters</h6>
                    <p class="small text-muted mb-0">Verify and manage voter accounts</p>
                </div>
            </a>
        </div>
        <div class="col-md-3">
            <a asp-action="ManageCandidates" class="card border-0 shadow-sm rounded-4 card-hover text-center p-4 text-decoration-none h-100">
                <div class="card-body">
                    <i class="fas fa-user-tie fa-3x text-success mb-3"></i>
                    <h6 class="fw-bold text-dark">Manage Candidates</h6>
                    <p class="small text-muted mb-0">Approve candidate applications</p>
                </div>
            </a>
        </div>
        <div class="col-md-3">
            <a asp-action="ManageElections" class="card border-0 shadow-sm rounded-4 card-hover text-center p-4 text-decoration-none h-100">
                <div class="card-body">
                    <i class="fas fa-poll fa-3x text-danger mb-3"></i>
                    <h6 class="fw-bold text-dark">Manage Elections</h6>
                    <p class="small text-muted mb-0">Create and oversee elections</p>
                </div>
            </a>
        </div>
        <div class="col-md-3">
            <a asp-action="CreateElection" class="card border-0 shadow-sm rounded-4 card-hover text-center p-4 text-decoration-none h-100">
                <div class="card-body">
                    <i class="fas fa-plus-circle fa-3x text-info mb-3"></i>
                    <h6 class="fw-bold text-dark">Create Election</h6>
                    <p class="small text-muted mb-0">Launch a new voting event</p>
                </div>
            </a>
        </div>
    </div>
</div>

<style>
    .bg-gradient-dark {
        background: linear-gradient(135deg, #1e293b 0%, #0f172a 100%);
    }
    .card-hover:hover {
        transform: translateY(-5px);
        transition: transform 0.3s ease;
    }
</style>
