@model IEnumerable<practice.Models.Election>
@{
    ViewData["Title"] = "Manage Elections";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-5 px-lg-5 bg-light min-vh-100">

    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-5 pb-3 border-bottom border-dark">
        <div class="mb-3 mb-md-0">
            <h2 class="fw-bold text-black mb-1">
                <i class="fas fa-landmark me-2"></i>Election Administration
            </h2>
            <p class="text-secondary mb-0">Overview of active polls and candidate registries.</p>
        </div>
        <div>
            <a asp-action="CreateElection" class="btn btn-forest px-4 py-2 shadow-sm">
                <i class="fas fa-plus me-2"></i>New Election
            </a>
        </div>
    </div>

    <div class="row g-4">
        @foreach (var election in Model)
        {
            <div class="col-md-6 col-xl-4">
                <div class="card h-100 border-0 shadow-sm">

                    <div class="card-header bg-white border-bottom-0 pt-4 d-flex justify-content-between align-items-center">
                       
                        @if (election.EndDate < DateTime.Now)
                        {
                            <span class="badge bg-light text-secondary border px-3 py-2 rounded-1">
                                CLOSED
                            </span>
                        }
                        else if (election.IsActive && election.StartDate <= DateTime.Now)
                        {
                            <span class="badge text-white px-3 py-2 rounded-1" style="background-color:forestgreen">
                                ACTIVE
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark px-3 py-2 rounded-1">
                                UPCOMING
                            </span>
                        }
                        @* --- FIXED STATUS LOGIC END --- *@

                        @if (election.ResultsPublished)
                        {
                            <small class="text-forest fw-bold text-uppercase" style="letter-spacing: 1px;">
                                <i class="fas fa-check-circle me-1"></i>Published
                            </small>
                        }
                    </div>

                    <div class="card-body d-flex flex-column pt-2">

                        <h5 class="fw-bold text-black mb-1">@election.Title</h5>
                        <small class="text-secondary fw-bold text-uppercase mb-3">@election.ElectionType</small>

                        <p class="text-muted small mb-4 flex-grow-1">@election.Description</p>

                        <div class="bg-light p-3 rounded-1 mb-4">
                            <div class="d-flex align-items-center text-dark small mb-2">
                                <i class="far fa-calendar-alt me-3 text-secondary" style="width: 16px;"></i>
                                <span class="fw-bold">@election.StartDate.ToString("MMM dd") – @election.EndDate.ToString("MMM dd, yyyy")</span>
                            </div>
                            <div class="d-flex align-items-center text-dark small">
                                <i class="fas fa-fingerprint me-3 text-secondary" style="width: 16px;"></i>
                                <span>Ref ID: #@election.Id</span>
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <div class="row g-2">
                                <div class="col-6">
                                    <a asp-action="ViewCandidates" asp-route-electionId="@election.Id" class="btn btn-outline-black w-100 btn-sm">
                                        Candidates
                                    </a>
                                </div>
                                <div class="col-6">
                                    <a asp-action="EditElection" asp-route-id="@election.Id" class="btn btn-outline-black w-100 btn-sm">
                                        Edit Details
                                    </a>
                                </div>
                            </div>

                            <div class="row g-2">
                                <div class="col-6">
                                    @if (!election.ResultsPublished)
                                    {
                                        <form asp-action="PublishResults" method="post">
                                            <input type="hidden" name="electionId" value="@election.Id" />
                                            <button type="submit" class="btn btn-outline-forest w-100 btn-sm" onclick="return confirm('Publish results?')">
                                                Publish
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <a asp-action="ViewResults" asp-route-electionId="@election.Id" class="btn btn-black w-100 btn-sm">
                                            Results
                                        </a>
                                    }
                                </div>
                                <div class="col-6">
                                    <form asp-action="DeleteElection" asp-route-id="@election.Id" method="post">
                                        <button type="submit" class="btn btn-link text-white w-100 btn-sm text-decoration-none bg_red"
                                                onclick="return confirm('Delete record?');">
                                            Delete
                                        </button>
                                    </form>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
