@model IEnumerable<practice.Models.Election>
@{
    ViewData["Title"] = "Manage Elections";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-primary mb-1">
                <i class="fas fa-poll me-2"></i>Manage Elections
            </h2>
            <p class="text-muted small">Create and oversee voting events</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Dashboard" class="btn btn-outline-secondary rounded-pill btn-sm">
                <i class="fas fa-arrow-left me-2"></i>Back
            </a>
            <a asp-action="CreateElection" class="btn btn-primary rounded-pill btn-sm shadow-sm">
                <i class="fas fa-plus-circle me-2"></i>Create New
            </a>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <div class="mb-3">
                 <i class="fas fa-poll fa-3x text-muted opacity-50"></i>
            </div>
            <h5 class="text-muted">No elections created yet</h5>
            <a asp-action="CreateElection" class="btn btn-primary rounded-pill mt-3">Create First Election</a>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var election in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card border-0 shadow-sm rounded-4 h-100 card-hover overflow-hidden">
                        <div class="card-header border-0 py-3 @(election.IsActive ? "bg-success bg-gradient text-white" : "bg-secondary bg-gradient text-white")">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <h5 class="fw-bold mb-1">@election.Title</h5>
                                    <span class="badge bg-white bg-opacity-25 fw-normal">@election.ElectionType</span>
                                </div>
                                <div class="bg-white bg-opacity-25 rounded-circle p-2">
                                    <i class="fas @(election.IsActive ? "fa-bolt" : "fa-archive")"></i>
                                </div>
                            </div>
                        </div>
                        <div class="card-body p-4">
                            <p class="text-muted small mb-3">@election.Description</p>
                            
                            <div class="d-flex align-items-center mb-3 text-secondary small">
                                <i class="fas fa-calendar-alt me-2 text-primary opacity-50"></i>
                                <span class="fw-bold">@election.StartDate.ToString("MMM dd")</span>
                                <span class="mx-2 text-muted">-</span>
                                <span class="fw-bold">@election.EndDate.ToString("MMM dd, yyyy")</span>
                            </div>

                            <div class="mb-4">
                                @if (election.IsActive)
                                {
                                    <span class="badge bg-success bg-opacity-10 text-success rounded-pill px-3 py-2">
                                        <i class="fas fa-broadcast-tower me-1"></i>Live
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary bg-opacity-10 text-secondary rounded-pill px-3 py-2">
                                        <i class="fas fa-moon me-1"></i>Ended
                                    </span>
                                }
                                
                                @if (election.ResultsPublished)
                                {
                                    <span class="badge bg-info bg-opacity-10 text-info rounded-pill px-3 py-2 ms-2">
                                        <i class="fas fa-chart-pie me-1"></i>Results Out
                                    </span>
                                }
                            </div>

                            <hr class="border-light mb-3">

                            <div class="d-grid gap-2">
                                <div class="btn-group" role="group">
                                    <form asp-action="ToggleElectionStatus" method="post" class="w-100">
                                        <input type="hidden" name="electionId" value="@election.Id" />
                                        <button type="submit" class="btn @(election.IsActive ? "btn-outline-warning" : "btn-outline-success") btn-sm w-100 rounded-pill rounded-end-0">
                                            <i class="fas @(election.IsActive ? "fa-pause" : "fa-play") me-1"></i>
                                            @(election.IsActive ? "Pause" : "Start")
                                        </button>
                                    </form>
                                    <a asp-action="EditElection" asp-route-id="@election.Id" class="btn btn-outline-secondary btn-sm w-100 rounded-pill rounded-start-0">
                                        <i class="fas fa-edit me-1"></i>Edit
                                    </a>
                                </div>

                                <div class="row g-2">
                                    <div class="col-6">
                                        @if (!election.ResultsPublished)
                                        {
                                            <form asp-action="PublishResults" method="post">
                                                <input type="hidden" name="electionId" value="@election.Id" />
                                                <button type="submit" class="btn btn-primary btn-sm w-100 rounded-3 text-truncate" onclick="return confirm('Publish results for this election?')">
                                                    Publish
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                             <button disabled class="btn btn-light text-muted btn-sm w-100 rounded-3 text-truncate">Published</button>
                                        }
                                    </div>
                                    <div class="col-6">
                                        <a asp-action="ViewResults" asp-route-electionId="@election.Id" class="btn btn-outline-primary btn-sm w-100 rounded-3 text-truncate">
                                            Results
                                        </a>
                                    </div>
                                </div>
                                
                                <form asp-action="DeleteElection" asp-route-id="@election.Id" method="post">
                                    <button type="submit" class="btn btn-link link-danger btn-sm w-100 text-decoration-none"
                                            onclick="return confirm('Are you sure you want to delete this election? This cannot be undone.');">
                                        <small><i class="fas fa-trash-alt me-1"></i>Delete Permanent</small>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
