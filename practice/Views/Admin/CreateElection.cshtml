@model practice.Models.Election
@{
    ViewData["Title"] = "Create Election";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header text-white py-3" style="background-color:forestgreen">
                    <h3 class="mb-0">
                        <i class="fas fa-plus-circle me-2"></i>Create New Election
                    </h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="CreateElection" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-bold">
                                <i class="fas fa-heading me-1"></i>Election Title
                            </label>
                            <input asp-for="Title" class="form-control" placeholder="Enter election title" />
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold">
                                <i class="fas fa-align-left me-1"></i>Description
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter election description"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>
                        <div class="mb-3">
                            <div class="form-check form-switch">
                                <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                                <label asp-for="IsActive" class="form-check-label fw-bold">
                                    Make election active immediately
                                </label>
                            </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="StartDate" class="form-label fw-bold">
                                    <i class="fas fa-calendar-alt me-1"></i>Start Date
                                </label>
                                <input asp-for="StartDate" type="datetime-local" class="form-control" />
                                <span asp-validation-for="StartDate" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="EndDate" class="form-label fw-bold">
                                    <i class="fas fa-calendar-times me-1"></i>End Date
                                </label>
                                <input asp-for="EndDate" type="datetime-local" class="form-control" />
                                <span asp-validation-for="EndDate" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ElectionType" class="form-label fw-bold">
                                <i class="fas fa-tag me-1"></i>Election Type
                            </label>
                            <select asp-for="ElectionType" class="form-control">
                                <option value="General">General</option>
                                <option value="Local">Local</option>
                                <option value="Regional">Regional</option>
                                <option value="Special">Special</option>
                            </select>
                            <span asp-validation-for="ElectionType" class="text-danger small"></span>
                        </div>

                      
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn text-white btn-lg" style="background-color:forestgreen">
                                <i class="fas fa-check-circle me-2"></i>Create Election
                            </button>
                            <a asp-action="ManageElections" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Back to Elections
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            // Get references to the elements
            var isActiveCheckbox = document.getElementById("IsActive");
            var startDateInput = document.getElementById("StartDate");

            // Function to toggle the disabled state
            function toggleStartDate() {
                if (isActiveCheckbox.checked) {
                    startDateInput.disabled = true;
                    startDateInput.value = ""; // Optional: Clear the value
                    startDateInput.classList.add("bg-light"); // Optional: Add grey background style
                } else {
                    startDateInput.disabled = false;
                    startDateInput.classList.remove("bg-light");
                }
            }

            // Run on page load (in case user returns to form with error)
            toggleStartDate();

            // Run whenever the checkbox changes
            isActiveCheckbox.addEventListener("change", toggleStartDate);
        });
    </script>
}

