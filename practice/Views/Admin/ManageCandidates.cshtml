@model IEnumerable<practice.Models.Candidate>
@{
    ViewData["Title"] = "Manage Candidates";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-primary mb-1">
                <i class="fas fa-user-tie me-2"></i>Manage Candidates
            </h2>
            <p class="text-muted small">Approve and oversee candidate applications</p>
        </div>
        <a asp-action="Dashboard" class="btn btn-outline-secondary rounded-pill btn-sm">
            <i class="fas fa-arrow-left me-2"></i>Back
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <div class="mb-3">
                <i class="fas fa-user-tie fa-3x text-muted opacity-50"></i>
            </div>
            <h5 class="text-muted">No candidates found</h5>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var candidate in Model)
            {
                <div class="col-md-6 col-lg-4 col-xl-3">
                    <div class="card border-0 shadow-sm rounded-4 h-100 card-hover">
                        <div class="card-body p-4">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div class="bg-success bg-opacity-10 rounded-circle p-3">
                                    <i class="fas fa-user-tie text-success fa-lg"></i>
                                </div>
                                <div class="text-end">
                                    @if (candidate.IsApproved && candidate.User.IsVerified)
                                    {
                                        <span class="badge bg-success bg-opacity-10 text-success rounded-pill px-3">
                                            <i class="fas fa-check-circle me-1"></i>Approved
                                        </span>
                                    }
                                    else if (!candidate.User.IsActive)
                                    {
                                        <span class="badge bg-danger bg-opacity-10 text-danger rounded-pill px-3">
                                            <i class="fas fa-ban me-1"></i>Rejected
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning bg-opacity-10 text-warning rounded-pill px-3">
                                            <i class="fas fa-clock me-1"></i>Pending
                                        </span>
                                    }
                                </div>
                            </div>

                            <h5 class="fw-bold text-dark mb-1">@candidate.User.FullName</h5>
                            <p class="text-secondary small mb-2 fw-medium">@candidate.PartyName</p>
                            @if (!string.IsNullOrEmpty(candidate.PartySymbol))
                            {
                                <span class="badge bg-info bg-opacity-10 text-info rounded-pill mb-3">
                                    @candidate.PartySymbol
                                </span>
                            }

                            <div class="bg-light rounded-3 p-3 mb-3">
                                <p class="small text-muted mb-0 fst-italic">
                                    "@(candidate.Manifesto.Length > 80 ? candidate.Manifesto.Substring(0, 80) + "..." : candidate.Manifesto)"
                                </p>
                            </div>

                            <div class="row g-2 mb-3 text-center">
                                <div class="col-6">
                                    <div class="border rounded-3 p-2">
                                        <small class="text-muted d-block text-uppercase" style="font-size: 0.65rem;">Votes</small>
                                        <span class="fw-bold text-primary">@candidate.TotalVotes</span>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="border rounded-3 p-2">
                                        <small class="text-muted d-block text-uppercase" style="font-size: 0.65rem;">Registered</small>
                                        <span class="fw-bold">@candidate.RegisteredAt.ToString("MMM dd")</span>
                                    </div>
                                </div>
                            </div>

                            <hr class="border-light my-3">

                            <div class="d-grid gap-2">
                                @if (!candidate.IsApproved && candidate.User.IsActive)
                                {
                                    <form asp-action="ApproveCandidate" method="post">
                                        <input type="hidden" name="candidateId" value="@candidate.Id" />
                                        <button type="submit" class="btn btn-success btn-sm w-100 rounded-pill shadow-sm">
                                            <i class="fas fa-check me-2"></i>Approve
                                        </button>
                                    </form>
                                    <form asp-action="RejectCandidate" method="post">
                                        <input type="hidden" name="candidateId" value="@candidate.Id" />
                                        <button type="submit" class="btn btn-outline-danger btn-sm w-100 rounded-pill" onclick="return confirm('Reject this candidate?')">
                                            <i class="fas fa-times me-2"></i>Reject
                                        </button>
                                    </form>
                                }
                                else if (candidate.IsApproved)
                                {
                                     <button disabled class="btn btn-success btn-sm w-100 rounded-pill opacity-50">
                                        <i class="fas fa-check-double me-2"></i>Active Candidate
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
