@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 bg-gradient-primary text-white text-center p-5">
                <h1 class="display-4 mb-3">
                    <i class="fas fa-vote-yea me-2"></i>Welcome to the Online Voting System
                </h1>
                <p class="lead mb-4">
                    A secure and transparent platform designed to simplify digital voting and result tracking.
                </p>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-4 mb-4">
            <div class="card shadow border-0 h-100">
                <div class="card-body text-center p-4">
                    <i class="fas fa-info-circle fa-3x text-primary mb-3"></i>
                    <h5 class="card-title mb-2">About the System</h5>
                    <p class="text-muted">
                        Understand how the system maintains election integrity through secure and reliable processes.
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow border-0 h-100">
                <div class="card-body text-center p-4">
                    <i class="fas fa-poll-h fa-3x text-success mb-3"></i>
                    <h5 class="card-title mb-2">Active Elections</h5>
                    <p class="text-muted">
                        View ongoing elections and cast your vote once your identity is verified.
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow border-0 h-100">
                <div class="card-body text-center p-4">
                    <i class="fas fa-chart-bar fa-3x text-warning mb-3"></i>
                    <h5 class="card-title mb-2">View Results</h5>
                    <p class="text-muted">
                        Access accurate and transparent election results after official publication.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .card.shadow {
        border-radius: 1rem;
    }

    .card-title {
        font-weight: 600;
    }
</style>
