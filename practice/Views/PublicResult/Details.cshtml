@model IEnumerable<practice.DTOs.VoteResultDto>
@{
    ViewData["Title"] = "Election Results";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var election = ViewBag.Election as practice.Models.Election;
    var totalVotes = ViewBag.TotalVotes as int? ?? 0;

    // Get the leader for the top card preview
    var leader = Model?.OrderByDescending(x => x.TotalVotes).FirstOrDefault();
}

<div class="container mt-4 mb-5">

    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-gradient-success text-white shadow-lg border-0">
                <div class="card-body py-4">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h2 class="mb-2">
                                <i class="fas fa-chart-bar me-2"></i>Election Results
                            </h2>
                            <h4 class="mb-2">@(election?.Title ?? "Election Title")</h4>
                            <p class="mb-0 opacity-75">@(election?.Description ?? "No description available.")</p>

                            <div class="mt-3">
                                <span class="badge bg-light text-dark fs-6 me-2">
                                    <i class="fas fa-vote-yea me-1"></i>Total Votes: @totalVotes
                                </span>
                                @if (election?.ResultsPublished == true)
                                {
                                    <span class="badge bg-white text-success fs-6">
                                        <i class="fas fa-check-circle me-1"></i>Results Published
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark fs-6">
                                        <i class="fas fa-clock me-1"></i>Results Pending
                                    </span>
                                }
                            </div>
                        </div>

                        <div class="col-md-4 text-center mt-4 mt-md-0 pe-md-5">
                            @if (leader != null && leader.TotalVotes > 0)
                            {
                                <div class="d-inline-block me-md-4">
                                    <div class="position-relative d-inline-block">
                                        <div class="rounded-circle border border-4 border-white shadow overflow-hidden bg-light mb-2"
                                             style="width: 110px; height: 110px;">
                                            @if (!string.IsNullOrEmpty(leader.PhotoUrl))
                                            {
                                                <img src="@leader.PhotoUrl" class="w-100 h-100" style="object-fit: cover;" />
                                            }
                                            else
                                            {
                                                <div class="d-flex align-items-center justify-content-center h-100">
                                                    <i class="fas fa-user fa-3x text-muted"></i>
                                                </div>
                                            }
                                        </div>
                                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-warning text-dark border border-white">
                                            <i class="fas fa-crown"></i>
                                        </span>
                                    </div>
                                    <div class="text-center">
                                        <p class="text-white fw-bold text-uppercase mb-0">Current Leader</p>
                                        <p class="text-white fw-bolder fs-5 mb-0">@leader.CandidateName</p>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card shadow-lg border-0">
                    <div class="card-header bg-primary text-white py-3">
                        <h4 class="mb-0"><i class="fas fa-list-ol me-2"></i>Ranking</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th>Rank</th>
                                        <th>Candidate</th>
                                        <th>Party</th>
                                        <th class="text-center">Total Votes</th>
                                        <th class="text-center">Vote %</th>
                                        <th style="width: 30%;">Progress</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int rank = 1;
                                        foreach (var result in Model)
                                        {
                                            var badgeClass = rank == 1 ? "bg-warning text-dark" : rank == 2 ? "bg-secondary" : rank == 3 ? "bg-danger" : "bg-light text-dark border";
                                            var iconClass = rank == 1 ? "fa-trophy" : rank == 2 ? "fa-medal" : rank == 3 ? "fa-award" : "fa-user";

                                            <tr>
                                                <td>
                                                    <span class="badge @badgeClass fs-6 rounded-pill px-3">
                                                        <i class="fas @iconClass me-1"></i>#@rank
                                                    </span>
                                                </td>
                                                <td class="fw-bold">@result.CandidateName</td>
                                                <td>
                                                    <span class="fw-semibold">@result.PartyName</span>
                                                    @if (!string.IsNullOrEmpty(result.PartySymbol))
                                                    {
                                                        <span class="badge bg-light text-dark border ms-1 fw-normal">@result.PartySymbol</span>
                                                    }
                                                </td>
                                                <td class="text-center"><strong class="fs-5 text-primary">@result.TotalVotes</strong></td>
                                                <td class="text-center"><strong class="text-success">@result.VotePercentage.ToString("F1")%</strong></td>
                                                <td>
                                                    <div class="progress" style="height: 15px; border-radius: 10px;">
                                                        <div class="progress-bar @(rank == 1 ? "bg-success" : "bg-info")"
                                                             style="width: @result.VotePercentage%"></div>
                                                    </div>
                                                </td>
                                            </tr>
                                            rank++;
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @if (election?.ResultsPublished == true && leader != null && leader.TotalVotes > 0)
        {
            <div class="row">
                <div class="col-12">
                    <div class="card shadow-lg border-0 bg-gradient-winner text-center py-5">
                        <div class="card-body">
                            <div class="d-flex justify-content-center mb-4">
                                <div class="rounded-circle border border-5 border-warning shadow-lg overflow-hidden bg-white"
                                     style="width: 150px; height: 150px;">
                                    @if (!string.IsNullOrEmpty(leader.PhotoUrl))
                                    {
                                        <img src="@leader.PhotoUrl" class="w-100 h-100" style="object-fit: cover;" />
                                    }
                                    else
                                    {
                                        <div class="d-flex align-items-center justify-content-center h-100">
                                            <i class="fas fa-user fa-5x text-light"></i>
                                        </div>
                                    }
                                </div>
                            </div>
                            <i class="fas fa-trophy fa-3x text-warning mb-3 filter-shadow"></i>
                            <h2 class="text-white mb-2"><i class="fas fa-crown me-2"></i>Official Winner</h2>
                            <h3 class="text-white fw-bold display-6">@leader.CandidateName</h3>
                            <p class="text-white-50 fs-5 mb-4">@leader.PartyName</p>

                            <div class="d-inline-block bg-white rounded-pill px-5 py-3 shadow-lg">
                                <h4 class="text-primary mb-0">
                                    <i class="fas fa-vote-yea me-2"></i>@leader.TotalVotes Votes
                                    <span class="text-muted ms-2 fs-6">(@leader.VotePercentage.ToString("F1")%)</span>
                                </h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-info shadow border-0 py-4 d-flex align-items-center">
            <i class="fas fa-info-circle fa-2x me-3"></i>
            <div>
                <h5 class="fw-bold mb-1">No Results Available</h5>
                <p class="mb-0">Voting has not started or no votes have been recorded.</p>
            </div>
        </div>
    }

    <div class="text-center mt-5">
        <a asp-action="Index" asp-controller="PublicResult" class="btn btn-outline-secondary btn-lg px-5 rounded-pill">
            <i class="fas fa-arrow-left me-2"></i>Back to Archive
        </a>
    </div>
</div>

<style>
    .bg-gradient-success {
        background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
    }

    .bg-gradient-winner {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .filter-shadow {
        filter: drop-shadow(0px 2px 4px rgba(0,0,0,0.3));
    }

    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
        transition: 0.2s;
    }
</style>