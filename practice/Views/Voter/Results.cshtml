@model IEnumerable<practice.DTOs.VoteResultDto>
@{
    ViewData["Title"] = "Election Results";
    Layout = "~/Views/Shared/_Layout.cshtml";

    // --- FIX 1: SAFE CASTING ---
    // This prevents the "NullReferenceException" if ViewBag is empty
    var election = ViewBag.Election as practice.Models.Election;
    var totalVotes = ViewBag.TotalVotes as int? ?? 0; 
}

<div class="container mt-4 mb-5">
    
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-gradient-success text-white shadow-lg border-0">
                <div class="card-body py-4">
                    <h2 class="mb-2">
                        <i class="fas fa-chart-bar me-2"></i>Election Results
                    </h2>
                    <h4 class="mb-2">@(election?.Title ?? "Election Title")</h4>
                    <p class="mb-0">@(election?.Description ?? "No description available.")</p>
                    
                    <div class="mt-3">
                        <span class="badge bg-light text-dark fs-6 me-2">
                            <i class="fas fa-vote-yea me-1"></i>Total Votes: @totalVotes
                        </span>
                        
                        @if (election?.ResultsPublished == true)
                        {
                            <span class="badge bg-light text-success fs-6">
                                <i class="fas fa-check-circle me-1"></i>Results Published
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark fs-6">
                                <i class="fas fa-clock me-1"></i>Results Pending
                            </span>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card shadow-lg border-0">
                    <div class="card-header bg-primary text-white py-3">
                        <h4 class="mb-0">
                            <i class="fas fa-trophy me-2"></i>Vote Distribution
                        </h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th>Rank</th>
                                        <th>Candidate</th>
                                        <th>Party</th>
                                        <th class="text-center">Total Votes</th>
                                        <th class="text-center">Vote %</th>
                                        <th style="width: 30%;">Progress</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int rank = 1;
                                        foreach (var result in Model)
                                        {
                                            // Dynamic badge colors for Top 3
                                            var badgeClass = rank == 1 ? "bg-warning text-dark" : rank == 2 ? "bg-secondary" : rank == 3 ? "bg-danger" : "bg-light text-dark border";
                                            var iconClass = rank == 1 ? "fa-trophy" : rank == 2 ? "fa-medal" : rank == 3 ? "fa-award" : "fa-user";

                                            <tr>
                                                <td>
                                                    <span class="badge @badgeClass fs-6 rounded-pill px-3">
                                                        <i class="fas @iconClass me-1"></i>#@rank
                                                    </span>
                                                </td>
                                                <td class="fw-bold">
                                                    @result.CandidateName
                                                </td>
                                                <td>
                                                    <span class="fw-semibold">@result.PartyName</span>
                                                    @if (!string.IsNullOrEmpty(result.PartySymbol))
                                                    {
                                                        <small class="badge bg-light text-dark border ms-1">@result.PartySymbol</small>
                                                    }
                                                </td>
                                                <td class="text-center">
                                                    <strong class="fs-5 text-primary">@result.TotalVotes</strong>
                                                </td>
                                                <td class="text-center">
                                                    <strong class="text-success">@result.VotePercentage.ToString("F1")%</strong>
                                                </td>
                                                <td>
                                                    <div class="progress" style="height: 20px; border-radius: 10px;">
                                                        <div class="progress-bar @(rank == 1 ? "bg-success" : "bg-info")" 
                                                             role="progressbar" 
                                                             style="width: @result.VotePercentage%" 
                                                             aria-valuenow="@result.VotePercentage" 
                                                             aria-valuemin="0" 
                                                             aria-valuemax="100">
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                                            rank++;
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @if (election?.ResultsPublished == true)
        {
            var winner = Model.OrderByDescending(x => x.TotalVotes).FirstOrDefault();
            if (winner != null && winner.TotalVotes > 0)
            {
                <div class="row">
                    <div class="col-12">
                        <div class="card shadow-lg border-0 bg-gradient-winner">
                            <div class="card-body text-center py-5">
                                <i class="fas fa-trophy fa-4x text-warning mb-3 filter-shadow"></i>
                                <h2 class="text-white mb-2">
                                    <i class="fas fa-crown me-2"></i>Election Winner
                                </h2>
                                <h3 class="text-white fw-bold display-6">@winner.CandidateName</h3>
                                <p class="text-white-50 fs-5 mb-4">@winner.PartyName</p>
                                
                                <div class="d-inline-block bg-white rounded-pill px-5 py-3 shadow-lg">
                                    <h4 class="text-primary mb-0">
                                        <i class="fas fa-vote-yea me-2"></i>@winner.TotalVotes Votes 
                                        <span class="text-muted ms-2 fs-6">(@winner.VotePercentage.ToString("F1")%)</span>
                                    </h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    }
    else
    {
        <div class="alert alert-info shadow border-0 py-4">
            <div class="d-flex align-items-center">
                <i class="fas fa-info-circle fa-2x me-3"></i>
                <div>
                    <h5 class="alert-heading fw-bold">No Results Available</h5>
                    <p class="mb-0">Voting has not started yet or no votes have been cast for this election.</p>
                </div>
            </div>
        </div>
    }

    <div class="text-center mt-5">
        <a asp-action="Dashboard" asp-controller="Voter" class="btn btn-outline-secondary btn-lg px-5 rounded-pill">
            <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
        </a>
    </div>
</div>

<style>
    /* Green Gradient for Header */
    .bg-gradient-success {
        background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
    }

    /* Purple/Blue Gradient for Winner Card */
    .bg-gradient-winner {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    /* Table Hover Effect */
    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
        transition: background-color 0.2s ease-in-out;
    }

    /* Text Shadow for Trophy Icon */
    .filter-shadow {
        filter: drop-shadow(0px 2px 4px rgba(0,0,0,0.3));
    }
</style>