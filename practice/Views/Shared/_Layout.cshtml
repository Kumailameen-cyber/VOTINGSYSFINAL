<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Online Voting System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/practice.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light sticky-top glass-effect">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-vote-yea text-success me-2"></i>Online Voting System
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto align-items-center gap-2">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            var role = Context.Session.GetString("Role") ?? "";
                            var fullName = Context.Session.GetString("FullName") ?? "User";

                            @if (role == "Admin")
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Admin" asp-action="Dashboard">
                                        <i class="fas fa-tachometer-alt me-1"></i>Dashboard
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Admin" asp-action="ManageUsers">
                                        <i class="fas fa-users me-1"></i>Users
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Admin" asp-action="ManageCandidates">
                                        <i class="fas fa-user-tie me-1"></i>Candidates
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Admin" asp-action="ManageElections">
                                        <i class="fas fa-poll me-1"></i>Elections
                                    </a>
                                </li>
                            }
                            else if (role == "Voter")
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Voter" asp-action="Dashboard">
                                        <i class="fas fa-home me-1"></i>Dashboard
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Voter" asp-action="Results">
                                        <i class="fas fa-chart-bar me-1"></i>Results
                                    </a>
                                </li>
                            }
                            else if (role == "Candidate")
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Candidate" asp-action="Dashboard">
                                        <i class="fas fa-home me-1"></i>Dashboard
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Candidate" asp-action="EditProfile">
                                        <i class="fas fa-user-edit me-1"></i>Profile
                                    </a>
                                </li>
                               
                            }

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle btn btn-light rounded-pill px-3" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-user-circle me-1"></i>@fullName
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end shadow border-0">
                                    <li>
                                        <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline w-100">
                                            <button type="submit" class="dropdown-item">
                                                <i class="fas fa-sign-out-alt me-2"></i>Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Auth" asp-action="Login">
                                    Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-primary" asp-controller="Auth" asp-action="VoterRegister">
                                    Register as Voter
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-primary" asp-controller="Auth" asp-action="CandidateRegister">
                                    Register as Candidate
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container my-5 pb-5">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show shadow-sm rounded-3 mb-4" role="alert">
                <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show shadow-sm rounded-3 mb-4" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["WarningMessage"] != null)
        {
            <div class="alert alert-warning alert-dismissible fade show shadow-sm rounded-3 mb-4" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>@TempData["WarningMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @RenderBody()
    </main>

    <footer class="text-center py-4 bg-white border-top">
        <div class="container">
            <div class="d-flex justify-content-center align-items-center flex-column">
                <p class="mb-1 fw-bold text-primary"><i class="fas fa-vote-yea me-2"></i>Online Voting System</p>
                <p class="text-muted small mb-0">&copy; 2024 Secure & Transparent Voting Platform</p>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>