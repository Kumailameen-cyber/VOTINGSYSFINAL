@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container d-flex flex-column justify-content-center align-items-center min-vh-75 py-5 animate__animated animate__fadeIn">
    <div class="text-center mb-4">
        <div class="bg-danger bg-opacity-10 text-danger rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 100px; height: 100px;">
             <i class="fas fa-exclamation-triangle fa-3x"></i>
        </div>
        <h1 class="display-5 fw-bold text-dark">Something went wrong</h1>
        <p class="lead text-muted mx-auto" style="max-width: 500px;">
            We encountered an unexpected error while processing your request. Our team has been notified.
        </p>
    </div>

    @if (Model.ShowRequestId)
    {
        <div class="card shadow-sm border-0 bg-light rounded-4 mb-4" style="min-width: 300px;">
            <div class="card-body text-center py-3">
                <small class="text-uppercase text-muted fw-bold letter-spacing-1">Error Reference</small>
                <div class="mt-1 font-monospace text-dark bg-white border rounded px-3 py-1 d-inline-block">
                    @Model.RequestId
                </div>
            </div>
        </div>
    }

    <div class="d-flex gap-3">
        <a href="javascript:history.back()" class="btn btn-outline-secondary rounded-pill px-4">
            <i class="fas fa-arrow-left me-2"></i>Go Back
        </a>
        <a href="/" class="btn btn-primary rounded-pill px-4 shadow-sm">
            <i class="fas fa-home me-2"></i>Return Home
        </a>
    </div>

    <div class="mt-5 text-center">
        <p class="small text-muted mb-0">
             If the issue persists, please <a href="#" class="text-primary text-decoration-none">contact support</a>.
        </p>
    </div>
</div>

<style>
    .min-vh-75 {
        min-height: 75vh;
    }
    .letter-spacing-1 {
        letter-spacing: 1px;
    }
</style>
