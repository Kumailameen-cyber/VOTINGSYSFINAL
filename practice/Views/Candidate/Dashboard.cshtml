@{
    ViewData["Title"] = "Candidate Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var user = ViewBag.User as practice.Models.User;
    var candidate = ViewBag.Candidate as practice.Models.Candidate;
    var activeElections = ViewBag.ActiveElection as List<practice.Models.Election>;
}

<div class="container mt-5 mb-5">

    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm overflow-hidden card-hover" style="border-radius: 16px;">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center flex-wrap">

                        <div class="icon-box bg-green-light text-green rounded-4 me-4 overflow-hidden position-relative">
                            @if (!string.IsNullOrEmpty(candidate?.ProfileImageUrl))
                            {
                                @* Display the candidate's image *@
                                <img src="@candidate.ProfileImageUrl"
                                     alt="Profile Picture"
                                     class="w-100 h-100"
                                     style="object-fit: cover;" />
                            }
                            else
                            {
                                @* Display default icon *@
                                <i class="fas fa-user-tie fa-2x"></i>
                            }
                        </div>
                        <div class="flex-grow-1">
                            <h2 class="fw-bold mb-0 text-dark">@user?.FullName</h2>
                            <p class="text-muted mb-1">
                                <i class="fas fa-flag me-1 text-green"></i> @candidate?.PartyName
                            </p>

                            <div class="mt-2">
                                @if (user?.IsVerified == true && candidate?.IsApproved == true)
                                {
                                    <span class="badge bg-green-subtle text-green rounded-pill px-3 py-2 fs-6">
                                        <i class="fas fa-check-circle me-1"></i> Approved Candidate
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-warning-subtle text-warning rounded-pill px-3 py-2 fs-6">
                                        <i class="fas fa-clock me-1"></i> Pending Approval
                                    </span>
                                }
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">

        <div class="col-lg-7 mb-4">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4 class="fw-bold text-dark mb-0">Active Elections</h4>
                <span class="badge bg-light text-secondary rounded-pill">@((activeElections?.Count ?? 0)) Live</span>
            </div>

            @if (activeElections != null && candidate?.IsApproved == true)
            {
                @foreach (var election in activeElections)
                {
                    <div class="card border-0 shadow-sm mb-4 card-hover" style="border-left: 5px solid #16a34a; border-radius: 12px;">
                        <div class="card-body p-4">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h4 class="fw-bold text-dark mb-0">@election.Title</h4>
                                <span class="badge bg-green-subtle text-green">Active</span>
                            </div>

                            <p class="text-muted small mb-3">@election.Description</p>

                            <div class="row g-2 mb-3">
                                <div class="col-6">
                                    <small class="text-muted d-block">Start Date</small>
                                    <span class="fw-bold text-dark small">@election.StartDate.ToString("MMM dd, yyyy")</span>
                                </div>
                                <div class="col-6">
                                    <small class="text-muted d-block">End Date</small>
                                    <span class="fw-bold text-dark small">@election.EndDate.ToString("MMM dd, yyyy")</span>
                                </div>
                            </div>

                            <div class="d-grid">
                                @if (candidate?.ElectionId == election.Id)
                                {
                                    <button type="button" class="btn btn-secondary w-100 py-2" disabled>
                                        <i class="fas fa-check-circle me-2"></i>Participated
                                    </button>
                                }
                                else if (candidate?.ElectionId != null)
                                {
                                    <button type="button" class="btn btn-outline-secondary w-100 py-2 text-muted" disabled style="background-color: #f8f9fa;">
                                        <small>Already registered in another election</small>
                                    </button>
                                }
                                else
                                {
                                    <form asp-action="Participate" asp-controller="Candidate" method="post">
                                        <input type="hidden" name="electionId" value="@election.Id" />
                                        <button type="submit" class="btn btn-green w-100 py-2 shadow-success-hover text-white">
                                            <i class="fas fa-user-plus me-2"></i>Participate
                                        </button>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                }
            }
            else if (candidate?.IsApproved != true)
            {
                <div class="alert alert-warning border-0 shadow-sm d-flex align-items-center" role="alert" style="border-radius: 12px;">
                    <i class="fas fa-lock fa-2x me-3 opacity-50"></i>
                    <div>
                        <h6 class="fw-bold mb-1">Access Restricted</h6>
                        <p class="mb-0 small">You must be approved by an Admin to participate in elections.</p>
                    </div>
                </div>
            }
            else
            {
                <div class="text-center py-5 bg-light rounded-4">
                    <p class="text-muted mb-0">No active elections available.</p>
                </div>
            }
        </div>

        <div class="col-lg-5">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4 class="fw-bold text-dark mb-0">My Profile</h4>
                <a asp-action="EditProfile" class="btn btn-sm text-white rounded-pill px-3" style="background-color:forestgreen">
                    <i class="fas fa-edit me-1"></i> Edit
                </a>
            </div>

            <div class="card border-0 shadow-sm overflow-hidden mb-4" style="border-radius: 16px;">
                <div class="card-body p-4">

                    <div class="d-flex align-items-center mb-4">
                        <div class="icon-box-sm bg-light text-primary rounded-circle me-3">
                            <i class="fas fa-users"></i>
                        </div>
                        <div>
                            <small class="text-muted d-block">Party Name</small>
                            <span class="fw-bold text-dark">@candidate?.PartyName</span>
                        </div>
                    </div>

                    <div class="d-flex align-items-center mb-4">
                        <div class="icon-box-sm bg-light text-danger rounded-circle me-3">
                            <i class="fas fa-tag"></i>
                        </div>
                        <div>
                            <small class="text-muted d-block">Party Symbol</small>
                            <span class="fw-bold text-dark">@candidate?.PartySymbol</span>
                        </div>
                    </div>

                    <hr class="text-muted opacity-25 my-4">

                    <div class="mb-4">
                        <h6 class="fw-bold text-dark mb-2">
                            <i class="fas fa-scroll me-2 text-green"></i>Manifesto
                        </h6>
                        <div class="p-3 bg-light rounded-3">
                            <p class="text-muted small mb-0 fst-italic">
                                "@candidate?.Manifesto"
                            </p>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(candidate?.Biography))
                    {
                        <div class="mb-3">
                            <small class="fw-bold text-dark d-block mb-1">Biography</small>
                            <p class="text-muted small">@candidate?.Biography</p>
                        </div>
                    }

                    <div class="row g-2">
                        @if (!string.IsNullOrEmpty(candidate?.Education))
                        {
                            <div class="col-12">
                                <div class="d-flex align-items-start">
                                    <i class="fas fa-graduation-cap text-muted mt-1 me-2"></i>
                                    <div>
                                        <small class="fw-bold text-dark">Education</small>
                                        <p class="text-muted small mb-0">@candidate?.Education</p>
                                    </div>
                                </div>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(candidate?.PreviousExperience))
                        {
                            <div class="col-12 mt-3">
                                <div class="d-flex align-items-start">
                                    <i class="fas fa-briefcase text-muted mt-1 me-2"></i>
                                    <div>
                                        <small class="fw-bold text-dark">Experience</small>
                                        <p class="text-muted small mb-0">@candidate?.PreviousExperience</p>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                </div>
                <div class="card-footer bg-light border-0 py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <small class="text-muted">Candidate ID: <span class="fw-bold text-dark">@user?.VoterIdNumber</span></small>
                        <small class="text-muted">Reg: @candidate?.RegisteredAt.ToString("MMM yyyy")</small>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<style>
    /* Green Color Palette */
    .text-green {
        color: #16a34a !important;
    }

    .bg-green-light {
        background-color: rgba(22, 163, 74, 0.1);
    }

    .bg-green-subtle {
        background-color: rgba(22, 163, 74, 0.1);
    }

    .btn-green {
        background-color: #16a34a;
        color: white;
        border: none;
    }

        .btn-green:hover {
            background-color: #15803d;
            color: white;
        }

    /* Warning Palette */
    .text-warning {
        color: #d97706 !important;
    }

    .bg-warning-subtle {
        background-color: rgba(251, 191, 36, 0.1);
    }

    /* Icon Boxes */
    .icon-box {
        width: 64px;
        height: 64px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .icon-box-sm {
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* Card Hover Effect */
    .card-hover {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .card-hover:hover {
            transform: translateY(-4px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.05) !important;
        }

    /* Button Shadow on Hover */
    .shadow-success-hover:hover {
        box-shadow: 0 4px 14px 0 rgba(22, 163, 74, 0.39);
        transform: translateY(-1px);
    }
</style>