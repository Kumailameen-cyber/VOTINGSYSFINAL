@{
    ViewData["Title"] = "Candidate Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var user = ViewBag.User as practice.Models.User;
    var candidate = ViewBag.Candidate as practice.Models.Candidate;
    var activeElections = ViewBag.ActiveElection as List<Election>;
    var totalVotes = (int)ViewBag.TotalVotes;
    int i ;
}

<div class="container py-4 animate__animated animate__fadeIn">
    <!-- Candidate Info / Stats -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="card bg-primary text-white shadow-lg border-0 rounded-4 overflow-hidden position-relative">
                <!-- Background decoration -->
                <div class="position-absolute top-0 end-0 p-3 opacity-25">
                    <i class="fas fa-bullhorn fa-10x transform-rotate-n15"></i>
                </div>
                
                <div class="card-body py-5 px-4 position-relative z-1">
                    <div class="row align-items-center">
                        <div class="col-lg-8">
                            <h6 class="text-uppercase letter-spacing-2 opacity-75 mb-2">Candidate Portal</h6>
                            <h2 class="display-5 fw-bold mb-2">
                                <i class="fas fa-user-tie me-2"></i>@user?.FullName
                            </h2>
                            <h4 class="mb-3 opacity-90">
                                <i class="fas fa-flag me-2"></i>@candidate?.PartyName
                            </h4>
                            <div class="d-flex flex-wrap gap-3">
                                <span class="badge bg-white bg-opacity-20 backdrop-blur rounded-pill px-3 py-2 fw-normal">
                                    <i class="fas fa-envelope me-2"></i>@user?.Email
                                </span>
                                @if (user?.IsVerified == true && candidate?.IsApproved == true)
                                {
                                    <span class="badge bg-success rounded-pill px-3 py-2 shadow-sm">
                                        <i class="fas fa-check-circle me-2"></i>Candidacy Approved
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark rounded-pill px-3 py-2 shadow-sm">
                                        <i class="fas fa-clock me-2"></i>Pending Approval
                                    </span>
                                }
                            </div>
                        </div>
                        <div class="col-lg-4 mt-4 mt-lg-0 text-lg-end">
                            <div class="d-inline-block bg-white text-dark rounded-4 p-4 shadow-lg text-start" style="min-width: 200px;">
                                <h6 class="text-muted text-uppercase small fw-bold mb-2">Total Votes Received</h6>
                                <h1 class="text-primary mb-0 display-4 fw-bold">
                                    <i class="fas fa-vote-yea me-2 text-primary opacity-50"></i>@totalVotes
                                </h1>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mb-5">
        <!-- Sidebar - Profile Summary & Account Info -->
        <div class="col-lg-4">
             <!-- Profile Summary -->
             <div class="card shadow-sm border-0 rounded-4 mb-4">
                <div class="card-header bg-white border-0 py-3 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold text-dark"><i class="fas fa-id-card me-2 text-primary"></i>Your Profile</h5>
                    <a asp-action="EditProfile" class="btn btn-sm btn-outline-primary rounded-pill">
                        <i class="fas fa-edit me-1"></i>Edit
                    </a>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-center mb-4">
                         @if (!string.IsNullOrEmpty(candidate?.ProfileImageUrl))
                        {
                            <img src="@candidate.ProfileImageUrl" class="rounded-circle shadow-sm border" width="80" height="80" alt="@candidate.PartyName" />
                        }
                        else
                        {
                            <div class="rounded-circle bg-light d-inline-flex align-items-center justify-content-center border" style="width: 80px; height: 80px;">
                                <i class="fas fa-flag fa-2x text-muted"></i>
                            </div>
                        }
                        <div class="ms-3">
                            <h6 class="mb-0 fw-bold">@candidate?.PartyName</h6>
                            <small class="text-muted">@candidate?.PartySymbol</small>
                        </div>
                    </div>

                    <div class="mb-3">
                        <h6 class="text-secondary small text-uppercase fw-bold mb-2">Manifesto</h6>
                        <p class="text-muted small line-clamp-3 mb-0">@candidate?.Manifesto</p>
                    </div>

                    @if (!string.IsNullOrEmpty(candidate?.Biography))
                    {
                        <div class="mb-3">
                            <h6 class="text-secondary small text-uppercase fw-bold mb-2">Biography</h6>
                            <p class="text-muted small line-clamp-3 mb-0">@candidate?.Biography</p>
                        </div>
                    }
                    
                    <hr class="opacity-10">
                    
                    <div class="row g-2">
                        @if (!string.IsNullOrEmpty(candidate?.Education))
                        {
                            <div class="col-12">
                                <small class="text-muted d-block fw-bold"><i class="fas fa-graduation-cap me-1"></i>Education</small>
                                <span class="small">@candidate?.Education</span>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(candidate?.PreviousExperience))
                        {
                            <div class="col-12 mt-2">
                                <small class="text-muted d-block fw-bold"><i class="fas fa-briefcase me-1"></i>Experience</small>
                                <span class="small">@candidate?.PreviousExperience</span>
                            </div>
                        }
                    </div>
                </div>
             </div>

             <!-- Account Info -->
             <div class="card shadow-sm border-0 rounded-4 bg-light">
                 <div class="card-body py-4">
                     <h5 class="fw-bold mb-3 text-dark"><i class="fas fa-info-circle me-2 text-info"></i>Account Details</h5>
                     <div class="d-flex justify-content-between mb-2">
                         <span class="text-muted small">Voter ID</span>
                         <span class="fw-bold small">@user?.VoterIdNumber</span>
                     </div>
                     <div class="d-flex justify-content-between mb-2">
                         <span class="text-muted small">Phone</span>
                         <span class="fw-bold small">@user?.PhoneNumber</span>
                     </div>
                     <div class="d-flex justify-content-between">
                         <span class="text-muted small">Registered</span>
                         <span class="fw-bold small">@candidate?.RegisteredAt.ToString("MMM dd, yyyy")</span>
                     </div>
                 </div>
             </div>
        </div>

        <!-- Main Content - Active Elections -->
        <div class="col-lg-8">
            <div class="d-flex align-items-center justify-content-between mb-3">
                 <h4 class="fw-bold text-dark mb-0">
                    <i class="fas fa-calendar-check me-2 text-primary"></i>Available Elections
                </h4>
            </div>

            @if (activeElections != null && candidate?.IsApproved == true && activeElections.Any())
            {
                <div class="row g-4">
                    @{ i = 1; }
                    @foreach (var election in activeElections)
                    {
                        <div class="col-12">
                            <div class="card shadow-sm hover-shadow border-0 rounded-4 overflow-hidden transaction-card">
                                <div class="card-body p-0">
                                    <div class="d-flex flex-column flex-md-row">
                                        <!-- Left Side: Date & Type -->
                                        <div class="bg-light p-4 d-flex flex-column justify-content-center align-items-center text-center" style="min-width: 150px;">
                                            <span class="badge bg-primary rounded-pill mb-2">@election.ElectionType</span>
                                            <h3 class="fw-bold mb-0 text-dark">@election.StartDate.Day</h3>
                                            <small class="text-uppercase fw-bold text-muted">@election.StartDate.ToString("MMM")</small>
                                        </div>

                                        <!-- Right Side: Content & Action -->
                                        <div class="p-4 flex-grow-1">
                                            <div class="d-flex justify-content-between align-items-start mb-2">
                                                <h4 class="fw-bold mb-0 text-dark">@election.Title</h4>
                                                <span class="badge bg-success bg-opacity-10 text-success rounded-pill">
                                                    <i class="fas fa-circle me-1 small"></i>Active
                                                </span>
                                            </div>
                                            
                                            <p class="text-muted small mb-3">@election.Description</p>
                                            
                                            <div class="d-flex flex-wrap justify-content-between align-items-center mt-auto">
                                                <div class="small text-muted mb-2 mb-md-0">
                                                     <i class="fas fa-clock me-1"></i> Ends: @election.EndDate.ToString("MMM dd, yyyy")
                                                </div>
                                                
                                                <form asp-action="Participate" asp-controller="Candidate" method="post" class="d-flex">
                                                    <input type="hidden" name="electionId" value="@election.Id" />
                                                    <button type="submit" class="btn btn-primary rounded-pill px-4 shadow-sm btn-hover-scale">
                                                        <i class="fas fa-user-plus me-2"></i>Participate
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else if (candidate?.IsApproved != true)
            {
                <div class="alert alert-warning border-0 shadow-sm rounded-4 p-5 text-center">
                    <i class="fas fa-lock fa-3x text-warning mb-3 opacity-50"></i>
                    <h4 class="fw-bold">Account Verification Required</h4>
                    <p class="mb-0 text-muted">Your candidacy profile must be approved by an administrator before you can participate in elections.</p>
                </div>
            }
            else
            {
                <div class="text-center py-5 bg-light rounded-4 border border-dashed">
                    <i class="fas fa-calendar-times fa-3x text-muted mb-3 opacity-25"></i>
                    <h5 class="fw-bold text-muted">No Open Elections</h5>
                    <p class="text-muted mb-0">There are no elections currently accepting candidates.</p>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .transform-rotate-n15 {
        transform: rotate(-15deg);
    }
    .letter-spacing-2 {
        letter-spacing: 2px;
    }
    .backdrop-blur {
        backdrop-filter: blur(5px);
    }
    .line-clamp-3 {
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
    .hover-shadow:hover {
        transform: translateY(-3px);
        box-shadow: 0 1rem 3rem rgba(0,0,0,.1) !important;
    }
    .transaction-card {
        transition: all 0.3s ease;
    }
    .btn-hover-scale:hover {
        transform: scale(1.05);
    }
    .border-dashed {
        border-style: dashed !important;
    }
</style>
