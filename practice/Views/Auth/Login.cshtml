@model practice.DTOs.LoginDto
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container min-vh-75 d-flex align-items-center justify-content-center py-5">
    <div class="row justify-content-center w-100">
        <div class="col-md-6 col-lg-5 col-xl-4">
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden card-hover">
                <div class="card-header bg-white text-center pt-4 pb-0 border-0">
                    <div class="mb-3">
                        <i class="fas fa-vote-yea fa-3x text-primary"></i>
                    </div>
                    <h3 class="fw-bold text-primary mb-1">Welcome Back</h3>
                    <p class="text-muted small">Sign in to your account to continue</p>
                </div>
                <div class="card-body p-4 pt-2">
                    <form asp-action="Login" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3 shadow-sm border-0 small"></div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-bold small text-uppercase text-secondary">Email Address</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0 rounded-start-pill ps-3"><i class="fas fa-envelope text-muted"></i></span>
                                <input asp-for="Email" class="form-control border-start-0 ps-2 rounded-end-pill py-2" placeholder="name@example.com" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Password" class="form-label fw-bold small text-uppercase text-secondary">Password</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0 rounded-start-pill ps-3"><i class="fas fa-lock text-muted"></i></span>
                                <input asp-for="Password" type="password" class="form-control border-start-0 ps-2 rounded-end-pill py-2" placeholder="••••••••" />
                            </div>
                            <span asp-validation-for="Password" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary rounded-pill btn-lg shadow-sm">
                                <i class="fas fa-sign-in-alt me-2"></i>Sign In
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer bg-light text-center py-3 border-top-0">
                    <p class="small text-muted mb-2">New to the platform?</p>
                    <div class="d-grid gap-2">
                        <a asp-action="VoterRegister" class="btn btn-outline-success rounded-pill btn-sm fw-bold">
                            Register as Voter
                        </a>
                        <a asp-action="CandidateRegister" class="btn btn-outline-secondary rounded-pill btn-sm fw-bold">
                            Register as Candidate
                        </a>
                    </div>
                </div>
            </div>

            <div class="mt-4">
                <div class="card card-body border-0 shadow-sm rounded-4 bg-light">
                    <div class="d-flex align-items-start">
                        <i class="fas fa-info-circle text-info mt-1 me-2"></i>
                        <div>
                            <h6 class="fw-bold text-dark mb-1">Admin Access</h6>
                            <p class="mb-0 small text-muted">admin@votingsystem.com / Admin@123</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
