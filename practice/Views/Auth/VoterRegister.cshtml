@model practice.DTOs.RegisterVoterDto
@{
    ViewData["Title"] = "Voter Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8 animate__animated animate__fadeInUp">
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                <div class="card-header bg-white text-center pt-5 pb-0 border-0">
                    <div class="mb-2">
                        <span class="badge bg-success bg-opacity-10 text-success rounded-pill px-3 py-2 mb-2">Voter Access</span>
                    </div>
                    <h2 class="fw-bold text-primary mb-1">Create Voter Account</h2>
                    <p class="text-muted">Join the platform to cast your secure vote</p>
                </div>
                <div class="card-body p-4 p-md-5 pt-3">
                    <form asp-action="VoterRegister" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3 shadow-sm border-0"></div>

                        <div class="row g-4 mb-4">
                            <div class="col-12">
                                <label asp-for="FullName" class="form-label fw-bold small text-uppercase text-secondary">Full Name</label>
                                <input asp-for="FullName" class="form-control rounded-pill py-2 px-3" placeholder="John Doe" />
                                <span asp-validation-for="FullName" class="text-danger small ms-2"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label fw-bold small text-uppercase text-secondary">Email Address</label>
                                <input asp-for="Email" class="form-control rounded-pill py-2 px-3" placeholder="name@example.com" />
                                <span asp-validation-for="Email" class="text-danger small ms-2"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="PhoneNumber" class="form-label fw-bold small text-uppercase text-secondary">Phone Number</label>
                                <input asp-for="PhoneNumber" class="form-control rounded-pill py-2 px-3" placeholder="0300 1234567" />
                                <span asp-validation-for="PhoneNumber" class="text-danger small ms-2"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="cnic" class="form-label fw-bold small text-uppercase text-secondary">CNIC Number</label>
                                <input asp-for="cnic" class="form-control rounded-pill py-2 px-3" placeholder="35202-1234567-8" />
                                <span asp-validation-for="cnic" class="text-danger small ms-2"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="VoterIdNumber" class="form-label fw-bold small text-uppercase text-secondary">Voter ID</label>
                                <input asp-for="VoterIdNumber" class="form-control rounded-pill py-2 px-3" placeholder="Unique Voter ID" />
                                <span asp-validation-for="VoterIdNumber" class="text-danger small ms-2"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Password" class="form-label fw-bold small text-uppercase text-secondary">Password</label>
                                <div class="input-group">
                                    <input asp-for="Password" type="password" class="form-control rounded-start-pill py-2 px-3" placeholder="Minimum 6 characters" />
                                    <span class="input-group-text bg-light rounded-end-pill border-start-0 px-3"><i class="fas fa-lock text-muted"></i></span>
                                </div>
                                <span asp-validation-for="Password" class="text-danger small ms-2"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ConfirmPassword" class="form-label fw-bold small text-uppercase text-secondary">Confirm Password</label>
                                <div class="input-group">
                                    <input asp-for="ConfirmPassword" type="password" class="form-control rounded-start-pill py-2 px-3" placeholder="Re-enter password" />
                                    <span class="input-group-text bg-light rounded-end-pill border-start-0 px-3"><i class="fas fa-check text-muted"></i></span>
                                </div>
                                <span asp-validation-for="ConfirmPassword" class="text-danger small ms-2"></span>
                            </div>
                        </div>

                        <div class="alert alert-light border border-secondary border-opacity-10 rounded-3 shadow-sm mb-4">
                            <div class="d-flex">
                                <i class="fas fa-info-circle text-primary mt-1 me-3"></i>
                                <span class="small text-muted">For security reasons, your account will require administrative verification before you can access the voting dashboard.</span>
                            </div>
                        </div>

                        <div class="d-grid gap-3">
                            <button type="submit" class="btn btn-success rounded-pill btn-lg shadow-sm fw-bold">
                                Create Account
                            </button>
                            <div class="text-center">
                                <a asp-action="Login" class="text-decoration-none text-muted small fw-bold">
                                    Already have an account? <span class="text-primary">Sign in</span>
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
