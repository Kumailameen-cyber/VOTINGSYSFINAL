@model practice.DTOs.RegisterCandidateDto
@{
    ViewData["Title"] = "Candidate Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-11 col-lg-9 animate__animated animate__fadeInUp">
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                <div class="card-header bg-white text-center pt-5 pb-0 border-0">
                    <div class="mb-2">
                        <span class="badge bg-info bg-opacity-10 text-info rounded-pill px-3 py-2 mb-2">Candidate Application</span>
                    </div>
                    <h2 class="fw-bold text-primary mb-1">Candidate Registration</h2>
                    <p class="text-muted">Register to contest in the upcoming elections</p>
                </div>
                <div class="card-body p-4 p-md-5 pt-3">
                    <form asp-action="CandidateRegister" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3 shadow-sm border-0 small"></div>

                        <!-- Section 1 -->
                        <div class="bg-light p-4 rounded-4 mb-4">
                            <h5 class="fw-bold text-primary mb-3"><i class="fas fa-user me-2"></i>Personal Information</h5>
                            <div class="row g-3">
                                <div class="col-12">
                                    <label asp-for="FullName" class="form-label fw-bold small text-secondary">Full Name</label>
                                    <input asp-for="FullName" class="form-control rounded-pill" placeholder="Enter your full name" />
                                    <span asp-validation-for="FullName" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Email" class="form-label fw-bold small text-secondary">Email</label>
                                    <input asp-for="Email" class="form-control rounded-pill" placeholder="name@example.com" />
                                    <span asp-validation-for="Email" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="PhoneNumber" class="form-label fw-bold small text-secondary">Phone Number</label>
                                    <input asp-for="PhoneNumber" class="form-control rounded-pill" placeholder="0300 1234567" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="cnic" class="form-label fw-bold small text-secondary">CNIC Number</label>
                                    <input asp-for="cnic" class="form-control rounded-pill" placeholder="CNIC Number" />
                                    <span asp-validation-for="cnic" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="VoterIdNumber" class="form-label fw-bold small text-secondary">Voter ID</label>
                                    <input asp-for="VoterIdNumber" class="form-control rounded-pill" placeholder="Voter ID" />
                                    <span asp-validation-for="VoterIdNumber" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Password" class="form-label fw-bold small text-secondary">Password</label>
                                    <input asp-for="Password" type="password" class="form-control rounded-pill" placeholder="Minimum 6 characters" />
                                    <span asp-validation-for="Password" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="ConfirmPassword" class="form-label fw-bold small text-secondary">Confirm Password</label>
                                    <input asp-for="ConfirmPassword" type="password" class="form-control rounded-pill" placeholder="Re-enter password" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Section 2 -->
                        <div class="bg-light p-4 rounded-4 mb-4">
                            <h5 class="fw-bold text-primary mb-3"><i class="fas fa-flag me-2"></i>Political Details</h5>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label asp-for="PartyName" class="form-label fw-bold small text-secondary">Party Name</label>
                                    <input asp-for="PartyName" class="form-control rounded-pill" placeholder="Independent or Party Name" />
                                    <span asp-validation-for="PartyName" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="PartySymbol" class="form-label fw-bold small text-secondary">Party Symbol</label>
                                    <input asp-for="PartySymbol" class="form-control rounded-pill" placeholder="e.g., Eagle, Arrow" />
                                    <span asp-validation-for="PartySymbol" class="text-danger small"></span>
                                </div>
                                <div class="col-12">
                                    <label asp-for="Manifesto" class="form-label fw-bold small text-secondary">Manifesto</label>
                                    <textarea asp-for="Manifesto" class="form-control rounded-3" rows="3" placeholder="Describe your vision and goals..."></textarea>
                                    <span asp-validation-for="Manifesto" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                         <!-- Section 3 -->
                        <div class="bg-light p-4 rounded-4 mb-4">
                            <h5 class="fw-bold text-primary mb-3"><i class="fas fa-graduation-cap me-2"></i>Profile & Experience</h5>
                            <div class="row g-3">
                                <div class="col-12">
                                    <label asp-for="Biography" class="form-label fw-bold small text-secondary">Biography</label>
                                    <textarea asp-for="Biography" class="form-control rounded-3" rows="3" placeholder="Tell us about yourself (Optional)"></textarea>
                                    <span asp-validation-for="Biography" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Education" class="form-label fw-bold small text-secondary">Education</label>
                                    <input asp-for="Education" class="form-control rounded-pill" placeholder="Highest degree" />
                                    <span asp-validation-for="Education" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="PreviousExperience" class="form-label fw-bold small text-secondary">Previous Experience</label>
                                    <input asp-for="PreviousExperience" class="form-control rounded-pill" placeholder="Any political experience?" />
                                    <span asp-validation-for="PreviousExperience" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="alert alert-warning border-0 shadow-sm rounded-3 mb-4 d-flex align-items-center">
                            <i class="fas fa-clipboard-check fa-lg me-3"></i>
                            <div>
                                <strong>Important:</strong> Your application will undergo a review process. Approval is subject to verification of details.
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary rounded-pill btn-lg shadow-sm">
                                Submit Application
                            </button>
                            <div class="text-center mt-2">
                                <a asp-action="Login" class="text-decoration-none text-muted small fw-bold">Cancel and go back</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
