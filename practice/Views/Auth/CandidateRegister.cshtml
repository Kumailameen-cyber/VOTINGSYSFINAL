@model practice.DTOs.RegisterCandidateDto
@{
    ViewData["Title"] = "Candidate Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-9">

            <!-- ================= Candidate Registration Card ================= -->
            <div class="card shadow-lg border-0 rounded-lg" >

                <!-- Card Header -->
                <div class="card-header  text-white text-center py-4" style="background-color:forestgreen">
                    <h3 class="mb-0">
                        <i class="fas fa-user-tie me-2"></i>Candidate Registration
                    </h3>
                    <p class="mb-0 mt-2 small">Register to contest in upcoming elections</p>
                </div>

                <!-- Card Body -->
                <div class="card-body p-4">

                    <!-- Registration Form -->
                    <form asp-action="CandidateRegister" method="post">

                        <!-- Display validation errors for the model -->
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- ================= Personal Information Section ================= -->
                        <h5 class="border-bottom pb-2 mb-3 text-primary">
                            <i class="fas fa-user-circle me-2"></i>Personal Information
                        </h5>

                        <!-- Full Name -->
                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label asp-for="FullName" class="form-label fw-bold">Full Name</label>
                                <input asp-for="FullName" class="form-control" placeholder="Enter your full name" />
                                <span asp-validation-for="FullName" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Email and Phone -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Email" class="form-label fw-bold">Email</label>
                                <input asp-for="Email" class="form-control" placeholder="your.email@example.com" />
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="PhoneNumber" class="form-label fw-bold">Phone Number</label>
                                <input asp-for="PhoneNumber" class="form-control" placeholder="10-digit number" />
                                <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- CNIC Number -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="cnic" class="form-label fw-bold">CNIC Number</label>
                                <input asp-for="cnic" class="form-control" placeholder="13-digit number" />
                                <span asp-validation-for="cnic" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Password & Confirm Password -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Password" class="form-label fw-bold">Password</label>
                                <input asp-for="Password" type="password" class="form-control" placeholder="Minimum 6 characters" />
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="ConfirmPassword" class="form-label fw-bold">Confirm Password</label>
                                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Re-enter password" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- ================= Political Information Section ================= -->
                        <h5 class="border-bottom pb-2 mb-3 mt-4 text-primary">
                            <i class="fas fa-flag me-2"></i>Political Information
                        </h5>

                        <!-- Party Name & Symbol -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="PartyName" class="form-label fw-bold">Party Name</label>
                                <input asp-for="PartyName" class="form-control" placeholder="Enter your party name" />
                                <span asp-validation-for="PartyName" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="PartySymbol" class="form-label fw-bold">Party Symbol</label>
                                <input asp-for="PartySymbol" class="form-control" placeholder="e.g., Lotus, Hand" />
                                <span asp-validation-for="PartySymbol" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Manifesto -->
                        <div class="mb-3">
                            <label asp-for="Manifesto" class="form-label fw-bold">Manifesto</label>
                            <textarea asp-for="Manifesto" class="form-control" rows="3" placeholder="Your election manifesto (max 500 characters)"></textarea>
                            <span asp-validation-for="Manifesto" class="text-danger small"></span>
                        </div>

                        <!-- Biography -->
                        <div class="mb-3">
                            <label asp-for="Biography" class="form-label fw-bold">Biography (Optional)</label>
                            <textarea asp-for="Biography" class="form-control" rows="3" placeholder="Brief biography"></textarea>
                            <span asp-validation-for="Biography" class="text-danger small"></span>
                        </div>

                        <!-- Education & Previous Experience -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Education" class="form-label fw-bold">Education (Optional)</label>
                                <input asp-for="Education" class="form-control" placeholder="Your educational qualifications" />
                                <span asp-validation-for="Education" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="PreviousExperience" class="form-label fw-bold">Previous Experience (Optional)</label>
                                <input asp-for="PreviousExperience" class="form-control" placeholder="Political or relevant experience" />
                                <span asp-validation-for="PreviousExperience" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Admin Approval Notice -->
                        <div class="alert alert-warning mb-3">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <small>
                                Your candidature will be reviewed and approved by the admin before you can participate in elections.
                            </small>
                        </div>

                        <!-- Form Actions -->
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-info btn-lg text-white" style="background-color:forestgreen">
                                <i class="fas fa-user-tie me-2"></i>Register as Candidate
                            </button>
                            <a asp-action="Login" class="btn btn-outline-secondary" >
                                <i class="fas fa-arrow-left me-2"></i>Back to Login
                            </a>
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

<!-- ================= Validation Scripts ================= -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
